<div id="recent">
  <%@random_pictures.each {|p|%>
  <div class="thumbnail" style="height:95px;width:85px;">
    <div class="thumbnail_title">
      <%=p.title%>
    </div>
    <div class="thumbnail_image" style="height:95px;width:75px;">
      <%=link_to image_tag(p.image.url(:thumb),:border=>0,:size=>"75x75",:alt=>p.description), view_url(:id=>p.guid)%>
    </div>
  </div>
  <%}%>
  <br clear="all"/>

  <div style="width:100%;border-top:1px solid #ccc;margin:5px;"></div>
