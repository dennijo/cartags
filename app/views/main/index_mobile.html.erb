      <%=link_to image_tag(p.image.url(:thumb),:border=>0,:size=>"75x75",:alt=>p.description), view_url(:id=>p.guid)%>
    </div>
  </div>
  <%}%>
  <br clear="all"/>
  <%if @total_pictures > @recent_pictures.nitems%>
    <div style="float:right;"><%=link_to "See More ..",{:controller=>:search,:action=>:browse}%></div>
  <%end%>
